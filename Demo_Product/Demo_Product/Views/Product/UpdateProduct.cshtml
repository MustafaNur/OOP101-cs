
@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Ürün Güncelleme Sayfası</h1>
<form method="post">
    @Html.Label("Ürün Id")
    @Html.TextBoxFor(x => x.ID, new{ @class = "form-control"})
    <br />
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x => x.Name , new{ @class = "form-control"})
    <br />
    @Html.Label("Ürün Fiyatı")
    @Html.TextBoxFor(x => x.Price, new{ @class = "form-control"})
    <br />
    @Html.Label("Ürün Stok Sayısı")
    @Html.TextBoxFor(x => x.Stok, new {@class = "form-control"})
    <br />
    <button class="btn btn-info">Ürün Güncelleme</button>
</form>

